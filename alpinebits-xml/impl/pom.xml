    <artifactId>alpinebits-xml-impl</artifactId>
    <version>5.0.1-SNAPSHOT</version>

    <name>AlpineBits XML impl</name>
    <description>Implementation of XML processing components for AlpineBits.</description>
    <url>https://www.alpinebits.org/</url>
    <scm>
        <url>https://github.com/noi-techpark/opendatahub-alpinebits</url>
    </scm>

    <properties>
        <jing.version>20220510</jing.version>
        <xmlunit.version>2.11.0</xmlunit.version>
